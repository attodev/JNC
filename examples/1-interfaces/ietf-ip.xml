<interfaces xmlns="urn:ietf:params:xml:ns:yang:ietf-interfaces">
  <interface>
    <name>eth0</name>
    <type>fast</type>
    <ipv4 xmlns="urn:ietf:params:xml:ns:yang:ietf-ip">
      <mtu>1500</mtu>
      <address>
        <ip>192.168.0.1</ip>
        <netmask>255.255.255.0</netmask>
      </address>
    </ipv4>
  </interface>
  <interface>
    <name>eth1</name>
    <type>atm</type>
    <enabled>true</enabled>
    <ipv4 xmlns="urn:ietf:params:xml:ns:yang:ietf-ip">
      <forwarding>true</forwarding>
      <address>
        <ip>127.0.0.1</ip>
        <netmask>255.0.0.0</netmask>
      </address>
      <address>
        <ip>192.168.2.2</ip>
        <netmask>255.255.255.0</netmask>
      </address>
      <neighbor>
        <ip>192.168.111.20</ip>
        <link-layer-address>00:08:c7:1b:8c:02</link-layer-address>
      </neighbor>
    </ipv4>
    <ipv6 xmlns="urn:ietf:params:xml:ns:yang:ietf-ip">
      <enabled>true</enabled>
    </ipv6>
  </interface>
</interfaces>
